<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    
    <!-- Dark shadow for window -->
    <DropShadowEffect x:Key="DarkShadow" Opacity="0.6" ShadowDepth="3" RenderingBias="Quality"/>
    
    <!-- Light shadow -->
    <DropShadowEffect x:Key="LoghtShadow" Opacity="0.3" ShadowDepth="2" RenderingBias="Quality"/>


</ResourceDictionary>